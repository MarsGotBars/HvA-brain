{% layout './layouts/layout.liquid' %}
{% block head %}
  <link rel="stylesheet" href="/assets/styling/project.css">
{% endblock %}
{% block %}
  <header>
    {% comment %} <nav> <a href="/portfolio">..</a> </nav> {% endcomment %}
    <nav>
      <ul>
        <li>
          <a style="--name: {{before.slug}}" href="/portfolio/{{before.slug}}">{{ before.title }}</a>
        </li>
        <li>
          <h1 class="huge" style="--name: {{project.slug}}">{{ project.title }}</h1>
        </li>
        <li>
          <a style="--name: {{after.slug}}" href="/portfolio/{{after.slug}}">{{ after.title }}</a>
        </li>
      </ul>
    </nav>
  </header>

  <main></main>
{% endblock %}